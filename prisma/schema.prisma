datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  venueName String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  courts    Court[]
  bookings  Booking[]
}

model Court {
  id           String    @id @default(cuid())
  name         String
  type         String
  pricePerHour String
  surface      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  userId       String
  user         User      @relation(fields: [userId], references: [id])
  bookings     Booking[]

  @@unique([name, userId])
}

model Booking {
  id           String   @id @default(cuid())
  courtId      String
  court        Court    @relation(fields: [courtId], references: [id])
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  customerName String
  startTime    DateTime
  endTime      DateTime
  amount       Decimal?
  status       String   @default("Pending")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
